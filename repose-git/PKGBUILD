_pkgname=repose
pkgname="${_pkgname}-git"
pkgver=r422.gfcd8b49
pkgrel=1

pkgdesc='An Arch Linux repo poking tool'
arch=('i686' 'x86_64')
url='https://github.com/vodik/repose'
license=('GPL')

depends=('pacman')
makedepends=('git')

provides=('repose')
conflicts=('repose')

source=("${pkgname}::git+https://github.com/vodik/repose.git")
md5sums=('SKIP')

pkgver() {
  cd "${pkgname}"
  printf "r%s.g%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$pkgname"
  make
}

package() {
  cd "$pkgname"
  make PREFIX=/usr DESTDIR="$pkgdir" install
}

